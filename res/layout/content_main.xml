<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="fp_android.abel2k.usal.org.fp_android15.MainActivity">

    <TextView
        android:text="Ejercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <Button
        android:id="@+id/boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="boton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEjercicio1"
        android:layout_alignParentLeft="true" />
    <Button
        android:id="@+id/btnEjercicio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go2Toast"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnEjercicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go2Alarm"
        android:layout_below="@+id/boton"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="goAlert"
        android:layout_below="@+id/btnEjercicio2"
        android:layout_alignParentLeft="true" />
    <Button
        android:id="@+id/btnEjercicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go2Fragment"
        android:layout_below="@+id/btnAlert"
        android:layout_alignParentLeft="true" />

    <!--include
        layout="@layout/fragment_ejemplo"/-->

</RelativeLayout>
